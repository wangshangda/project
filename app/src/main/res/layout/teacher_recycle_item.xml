<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <ImageView
        android:id="@+id/iv_teacher_head"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_empty_picture" />
    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/iv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_teacher_head"
        android:layout_alignTop="@+id/iv_teacher_head"
        android:textColor="@color/black"
        android:text="章鱼哥"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/iv_teacher_sex"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/icon_man"
        android:layout_alignTop="@+id/iv_teacher_head"
        android:layout_toRightOf="@+id/iv_teacher_name"
        android:layout_marginLeft="10dp"
        />
      <RatingBar
          android:id="@+id/ratingbar"
          android:layout_below="@+id/iv_teacher_name"
          android:layout_alignLeft="@+id/iv_teacher_name"
          android:layout_width="wrap_content"
          android:layout_marginTop="6dp"
          style="@style/ratingBarStyle"
          android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_evaluation"
        android:layout_alignBottom="@+id/iv_teacher_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人称行走的百科全书"
        android:layout_alignLeft="@+id/iv_teacher_name"
        style="@style/home_user_style"
        />

    <CheckBox
        android:id="@+id/cb_foucs"
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignTop="@+id/iv_teacher_head"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:background="@drawable/teacher_foucs_selector"
        android:text="已关注"
        android:button="@null"
        android:textColor="@drawable/home_teacher_textcolor_selector"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        />




</RelativeLayout>