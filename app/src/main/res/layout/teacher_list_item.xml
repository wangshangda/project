<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_content"
    android:layout_height="84dp">

    <ImageView
        android:id="@+id/iv_teacher_head"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_empty_picture" />
    <TextView
        android:layout_marginLeft="12dp"
        android:id="@+id/iv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_teacher_head"
        android:layout_alignTop="@+id/iv_teacher_head"
        android:textColor="@color/black"
        android:text="章鱼哥"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/iv_teacher_sex"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/icon_man"
        android:layout_alignTop="@+id/iv_teacher_head"
        android:layout_toRightOf="@+id/iv_teacher_name"
        android:layout_marginLeft="10dp"
        />
    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_below="@+id/iv_teacher_name"
        android:layout_alignLeft="@+id/iv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        style="@style/ratingBarStyle"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_evaluation"
        android:layout_alignBottom="@+id/iv_teacher_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝"
        android:layout_alignLeft="@+id/iv_teacher_name"
        style="@style/home_user_style"
        />





</RelativeLayout>