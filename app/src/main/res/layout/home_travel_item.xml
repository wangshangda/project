<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:background="@color/white"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_travel_head"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/ic_empty_picture" />


    <TextView
        android:id="@+id/tv_travel_name"
        style="@style/home_user_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_travel_head"
        android:layout_marginLeft="@dimen/sp_12"
        android:layout_toRightOf="@+id/iv_travel_head"
        android:text="shiningshell" />

    <TextView
        android:id="@+id/tv_travel_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_travel_name"
        android:layout_marginRight="24dp"
        android:text="2019-5-21"
        android:textColor="@color/color99"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_travel_content"
        style="@style/home_content_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_travel_name"
        android:layout_below="@+id/tv_travel_name"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/iv_travel_head"
        android:maxLines="2"
        android:text="英国游记 / 十天九夜五城，赠你一个特别的圣诞节和跨年夜" />

    <LinearLayout
        android:id="@+id/ll_travel_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_travel_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/iv_travel_head"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_travel_pic1"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_travel_pic2"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_travel_pic3"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_travel_evaluation"
        style="@style/home_user_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_travel_pic"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="1234" />

    <ImageView
        android:id="@+id/iv_travel_msg"
        android:layout_width="13dp"
        android:layout_height="11dp"
        android:layout_alignBottom="@+id/tv_travel_evaluation"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/tv_travel_evaluation"
        android:src="@mipmap/message" />

    <TextView
        android:id="@+id/tv_travel_watch"
        style="@style/home_user_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_travel_evaluation"
        android:layout_marginRight="36dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/iv_travel_msg"
        android:text="1234" />

    <ImageView
        android:id="@+id/iv_travel_watch"
        android:layout_width="12dp"
        android:layout_height="9dp"
        android:src="@mipmap/icon_eyes"
        android:layout_alignBottom="@+id/tv_travel_watch"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/tv_travel_watch" />


</RelativeLayout>