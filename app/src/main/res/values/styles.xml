<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="vpiTabPageIndicatorStyle">@style/MyWidget.TabPageIndicator</item>
    </style>


    <style name="MyWidget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/viewpager_title_textcolor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:divider">@color/color06BD</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="picture.default.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/bar_grey</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/bar_grey</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/picture_back</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/white</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/white</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/picture_checkbox_selector</item>
        <!--开启图片列表勾选数字模式-->
        <item name="picture.style.checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/color06BD</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/color06BD</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/pic_select_num_oval</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/color06BD</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/bar_grey</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/bar_grey_90</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/picture_back</item>
        <!--是否改变预览界面状态栏字体颜色为黑色-->
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/white</item>


        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>


    <!--主页Tab样式-->
    <style name="mall_HomeTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HomeTabStyle">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="ratingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/common_rating_bar</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>

    <style name="ratingBarMaxStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/common_big_rating_bar</item>
        <item name="android:minHeight">28dp</item>

        <item name="android:maxHeight">28dp</item>
    </style>


    <!--角标-->
    <!--角标样式-->
    <style name="redMarkStyle">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:background">@drawable/common_red_circle_view</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:visibility">invisible</item>
    </style>


    <!--水平线-->
    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorDC</item>
    </style>

    <!--白色水平线-->
    <style name="WhiteHorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/white</item>
    </style>
    <!--主页标题文字-->
    <style name="home_title_style">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="home_more_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:text">更多 +</item>
    </style>

    <style name="home_content_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="home_user_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="PopupAnimaFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
    </style>



</resources>
